<resources>

    <style name="MyTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="android:windowActionBar"> false </item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowActionBarOverlay">true</item> -->
        <!-- removes shadow under action bar -->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="windowActionBar"> false </item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/text_white</item>
        <!-- <item name="windowActionBarOverlay">true</item> -->
        <!-- removes shadow under action bar
        <item name="windowContentOverlay">@null</item> -->
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@drawable/navbar</item>
        <item name="android:actionOverflowButtonStyle">@color/text_white</item>
        <item name="android:titleTextStyle">@style/ProjActionBar.TitleTextStyle</item>
        <!-- <item name="android:height">@dimen/bar_height</item> -->

        <!-- Support library compatibility -->
        <item name="background">@drawable/navbar</item>
        <item name="actionOverflowButtonStyle">@color/text_white</item>
        <item name="titleTextStyle">@style/ProjActionBar.TitleTextStyle</item>
        <!-- <item name="height">@dimen/bar_height</item> -->
    </style>

    <style name="ProjActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- The layout for the search view. Be careful. -->
        <item name="android:iconifiedByDefault"> false </item>

    </style>

</resources>
